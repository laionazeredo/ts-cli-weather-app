{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "strict": true,
    "alwaysStrict": true,
    "compileOnSave": true,
    "compilerOptions": {
        "inlineSourceMap": true,
        "outDir": "./dist",
        "watch": true,
        "baseUrl": "./src",
        "paths": {
            "@src": [
                "."
            ]
        }
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "./node_modules/"
    ]
}